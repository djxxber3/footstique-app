<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".MatchDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCompetitionLogo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        tools:src="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tvCompetitionName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="الدوري الإسباني" />

                    <TextView
                        android:id="@+id/tvMatchStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFA500"
                        android:textSize="14sp"
                        tools:text="لم تبدأ" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivHomeTeamLogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:src="@android:color/holo_blue_dark" />

                        <TextView
                            android:id="@+id/tvHomeTeamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            tools:text="ريال مايوركا" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tvHomeTeamGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="-" />

                        <TextView
                            android:id="@+id/tvKickoffTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            tools:text="08:00 م"/>


                        <TextView
                            android:id="@+id/tvAwayTeamGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="-" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivAwayTeamLogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:src="@android:color/holo_red_dark" />

                        <TextView
                            android:id="@+id/tvAwayTeamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            tools:text="إسبانيول" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/details_background"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="البطولة"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tvCompetitionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="الدوري الإسباني"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#3A3A3A"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ملعب المباراة"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tvStadiumValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="ستاد ستيتج فرونت"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#3A3A3A"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="القناة الناقلة"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tvBroadcastingChannelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="بي إن سبورت 3"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#3A3A3A"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="وقت المباراة"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tvMatchTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="08:00 م (GMT +1)"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#3A3A3A"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تاريخ المباراة"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/tvMatchDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="الاثنين (15-09-2025)"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>